{
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.fixAll.unusedImports": true,
      "source.organizeImports": true
    }
  },
  "python.languageServer": "Pylance",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnknownMemberType": "none",
    "reportUnknownArgumentType": "none",
    "reportUnknownVariableType": "none",
    "reportUnknownLambdaType": "none",
    "reportUnknownParameterType": "none"
  },

  "files.associations": {
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    "editor.defaultFormatter": "monosans.djlint"
  },

  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "cSpell.enabled": true,
  // -----
  "workbench.colorCustomizations": {
    "editor.background": "#282C34"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword.control.import.js",
          "keyword.control.export.js",
          "keyword.control.from.js",
          "storage.modifier",
          "storage.type.class",
          "storage.type.php",
          "keyword.other.new.php",
          "entity.other.attribute-name",
          "fenced_code.block.language.markdown"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["entity.name.type.class"],
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["entity.name.section.markdown"],
        "settings": {
          "fontStyle": "italic bold"
        }
      },
      {
        "scope": [
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json",
          "comment.block",
          "entity.other.attribute-name.class.css"
        ],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": ["meta.function-call"],
        "settings": {
          "foreground": "#5BB6C1"
        }
      },
      {
        "scope": [
          "punctuation.definition.arguments.end.python",
          "punctuation.definition.arguments.begin.python",
          "variable.scss"
        ],
        "settings": {
          "foreground": "#fffb1d"
        }
      },
      {
        "scope": [
          "punctuation.definition.dict.begin.python",
          "punctuation.definition.dict.end.python"
        ],
        "settings": {
          "foreground": "#f71dff"
        }
      },
      {
        "scope": "string.quoted.single.python",
        "settings": {
          "foreground": "#94BC79"
        }
      },
      {
        "scope": "source.python",
        "settings": {
          "foreground": "#a6daf8"
        }
      },
      {
        "scope": [
          "entity.tag.tagbraces.django",
          "storage.type.templatetag.django"
        ],
        // entity.tag.tagbraces.django
        // storage.type.templatetag.django
        // text.html.django
        "settings": {
          "foreground": "#fffb1d"
        }
      }
    ]
  },
  "workbench.tree.indent": 15,
  "editor.hover.delay": 150,

  // Arrruma o cor dos brackets no codigo Django Html
  "editor.language.colorizedBracketPairs": [
    // ["{", "}"], // Block-Scoped Braces/Function-Braces
    ["[", "]"], // Array Square-brackets
    // ["(", ")"], // Func Call-args/Declaration-params Brackets
    ["<", ">"], // HTML/XML Tags
    ["\"", "\""], // String Quotations
    ["_", "_"], // Markdown: Italicized
    // ["**", "**"], // Markdown: Bold
    ["**_", "_**"], // Markdown: Italicized & Bold
    // ["{{", "}}"], // Double Curly Brackets
    ["`", "`"], // Back-tics
    ["#ifndef", "#endif"], // Highlight C Directives as pairs
    ["<%", "%>"], // Wrapping variables in JSON
    ["${", "}"], // Wrapping template variables in JS/TS
    ["$(", ")"] // Wrapping of template variables in BASH
  ]
  // ----
}
